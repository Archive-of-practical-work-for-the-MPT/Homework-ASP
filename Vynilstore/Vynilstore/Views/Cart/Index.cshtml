@model Vynilstore.Models.ShoppingCart

@{
    ViewData["Title"] = "Корзина";
    
    string FixImagePath(string path)
    {
        if (string.IsNullOrEmpty(path))
            return "/images/no-image.jpg";
            
        if (path.StartsWith("http"))
            return path;
            
        // Remove tilde if present
        if (path.StartsWith("~"))
            path = path.Substring(1);
            
        // Add leading / if not present
        if (!path.StartsWith("/"))
            path = "/" + path;
            
        return path;
    }
}

<div class="container mt-5">
    <h1>Корзина</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info">
            <p>Ваша корзина пуста.</p>
            <a asp-controller="Home" asp-action="Catalog" class="btn btn-primary">Перейти в каталог</a>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Ваши товары</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Изображение</th>
                                <th>Название</th>
                                <th>Исполнитель</th>
                                <th>Цена</th>
                                <th>Количество</th>
                                <th>Всего</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <img src="@FixImagePath(item.CoverImagePath)" alt="@item.Title" width="50" height="50" class="img-thumbnail" />
                                    </td>
                                    <td>@item.Title</td>
                                    <td>@item.ArtistName</td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        <form asp-action="UpdateQuantity" method="post">
                                            <input type="hidden" name="vinylId" value="@item.VinylId" />
                                            <div class="input-group">
                                                <input type="number" class="form-control form-control-sm" name="quantity" value="@item.Quantity" min="1" max="10" style="width: 60px;" />
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                    <i class="fas fa-sync-alt"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                    <td>@item.Total.ToString("C")</td>
                                    <td>
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="vinylId" value="@item.VinylId" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Удалить
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-end"><strong>Итого:</strong></td>
                                <td><strong>@Model.TotalPrice.ToString("C")</strong></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <div>
                    <form asp-action="ClearCart" method="post">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i> Очистить корзину
                        </button>
                    </form>
                </div>
                <div>
                    <a asp-controller="Home" asp-action="Catalog" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Продолжить покупки
                    </a>
                    <a asp-action="Checkout" class="btn btn-success">
                        <i class="fas fa-check"></i> Оформить заказ
                    </a>
                </div>
            </div>
        </div>
    }
</div> 