@model Vynilstore.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4">
                            <div class="profile-image-container">
                                <i class="fas fa-user-circle fa-7x text-secondary"></i>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-info">@Model.RoleName</span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Логин:</div>
                                <div class="col">@Model.Login</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Имя:</div>
                                <div class="col">@Model.FirstName</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4 fw-bold">Фамилия:</div>
                                <div class="col">@Model.LastName</div>
                            </div>
                            @if (Model.BirthDate.HasValue)
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Дата рождения:</div>
                                    <div class="col">@Model.BirthDate.Value.ToShortDateString()</div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Email:</div>
                                    <div class="col">@Model.Email</div>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4 fw-bold">Телефон:</div>
                                    <div class="col">@Model.PhoneNumber</div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2">На главную</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 